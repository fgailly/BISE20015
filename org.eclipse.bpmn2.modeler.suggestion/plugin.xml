<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="%category.name"
            id="org.eclipse.bpmn2.modeler.view">
      </category>
      <view
            name="Ontology Recommendations"
            icon="icons/magic.gif"
            category="org.eclipse.bpmn2.modeler.view"
            class="org.eclipse.bpmn2.modeler.suggestion.views.SuggestionView"
            id="org.eclipse.bpmn2.modeler.suggestion.views.SuggestionView">
      </view>
      <view
            category="org.eclipse.bpmn2.modeler.view"
            class="org.eclipse.bpmn2.modeler.suggestion.views.OntologyView"
            icon="icons/pin.gif"
            id="org.eclipse.bpmn2.modeler.suggestion.views.OntologyView"
            name="%view.name.0"
            restorable="true">
      </view>
      <view
            category="org.eclipse.bpmn2.modeler.view"
            class="org.eclipse.bpmn2.modeler.suggestion.views.OntologyPropertyView"
            icon="icons/tag.gif"
            id="org.eclipse.bpmn2.modeler.suggestion.views.OntologyPropertyView"
            name="Ontology Concept Properties"
            restorable="true">
      </view>
   </extension>

	<extension point="org.eclipse.ui.perspectiveExtensions">
   		<perspectiveExtension
      		targetID="jools_tool.PerspectiveFactory">
        <viewShortcut
              id="org.eclipse.bpmn2.modeler.suggestion.views.SuggestionView">
        </viewShortcut>
        <viewShortcut
              id="org.eclipse.bpmn2.modeler.suggestion.views.OntologyView">
        </viewShortcut>
        <viewShortcut
              id="org.eclipse.bpmn2.modeler.suggestion.views.OntologyPropertyView">
        </viewShortcut>
    	</perspectiveExtension>
     <perspectiveExtension
           targetID="org.eclipse.ui.resourcePerspective">
            <viewShortcut
              id="org.eclipse.bpmn2.modeler.suggestion.views.SuggestionView">
        </viewShortcut>
        <viewShortcut
              id="org.eclipse.bpmn2.modeler.suggestion.views.OntologyView">
        </viewShortcut>
        <viewShortcut
              id="org.eclipse.bpmn2.modeler.suggestion.views.OntologyPropertyView">
        </viewShortcut>
        <perspectiveShortcut
              id="org.eclipse.bpmn2.modeler.suggestion.perspectives.BPMNSuggestionPerspective">
        </perspectiveShortcut>
        <perspectiveShortcut
              id="org.eclipse.bpmn2.modeler.suggestion.perspectives.BPMNPerspective">
        </perspectiveShortcut>
     </perspectiveExtension>
     
	</extension>
 <extension
       point="org.eclipse.ui.propertiesView">
    <excludeSources
          id="org.eclipse.bpmn2.modeler.suggestion..views.SuggestionView">
    </excludeSources>
    <excludeSources
          id="org.eclipse.bpmn2.modeler.suggestion..views.OntologyView">
    </excludeSources>
 </extension>
 <extension
       point="org.eclipse.ui.perspectives">
    <perspective
          class="org.eclipse.bpmn2.modeler.suggestion.perspectives.BPMNSuggestionPerspective"
          id="org.eclipse.bpmn2.modeler.suggestion.perspectives.BPMNSuggestionPerspective"
          name="%perspective.name">
    </perspective>
    <perspective
          class="org.eclipse.bpmn2.modeler.suggestion.perspectives.BPMNPerspective"
          id="org.eclipse.bpmn2.modeler.suggestion.perspectives.BPMNPerspective"
          name="%perspective.name.0">
    </perspective>
 </extension>
 <extension
       id="BMPNSuggestion"
       point="org.eclipse.core.runtime.products">
    <product
          application="org.eclipse.ui.ide.workbench"
          name="BPMNmodeler Tutorial">
       <property
             name="windowImages"
             value="eclipse16.gif,eclipse32.gif,eclipse48.gif,eclipse16.png,eclipse32.png">
       </property>
       <property
             name="aboutText"
             value="%productBlurb">
       </property>
       <property
             name="aboutImage"
             value="eclipse_lg.gif">
       </property>
       <property
             name="startupForegroundColor"
             value="FFFFFF">
       </property>
       <property
             name="startupProgressRect"
             value="2,290,448,10">
       </property>
       <property
             name="startupMessageRect"
             value="7,225,320,20">
       </property>
       <property
             name="appName"
             value="BPMNmodeler Tutorial">
       </property>
       <property
             name="preferenceCustomization"
             value="plugin_customization.ini">
       </property>
    </product>
 </extension>
 <extension
       point="org.eclipse.ui.preferencePages">
    <page
          class="org.eclipse.bpmn2.modeler.suggestion.OntologiesPreferencePage"
          id="org.eclipse.bpmn2.modeler.suggestion.ontologies"
          name="CME+BPMN Ontologies">
    </page>
 </extension>
 <extension
       point="org.eclipse.core.runtime.preferences">
    <initializer
          class="org.eclipse.bpmn2.modeler.suggestion.OntologyPreferenceInitializer">
    </initializer>
 </extension>
 <extension
       point="org.eclipse.ui.commands">
    <category
          id="org.eclipse.bpmn2.modeler.suggestion.commands.category"
          name="Sample Category">
    </category>
    <command
          categoryId="org.eclipse.bpmn2.modeler.suggestion.commands.category"
          id="org.eclipse.bpmn2.modeler.suggestion.commands.sampleCommand"
          name="Sample Command">
    </command>
 </extension>
 <extension
       point="org.eclipse.ui.handlers">
    <handler
          class="org.eclipse.bpmn2.modeler.suggestion.handlers.SampleHandler"
          commandId="org.eclipse.bpmn2.modeler.suggestion.commands.sampleCommand">
    </handler>
 </extension>
 <extension
       point="org.eclipse.ui.bindings">
    <key
          commandId="org.eclipse.bpmn2.modeler.suggestion.commands.sampleCommand"
          contextId="org.eclipse.ui.contexts.window"
          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
          sequence="M1+6">
    </key>
 </extension>
 <extension
       point="org.eclipse.ui.menus">
    <menuContribution
          locationURI="menu:org.eclipse.ui.main.menu?after=additions">
       <menu
             id="org.eclipse.bpmn2.modeler.suggestion.menus.sampleMenu"
             label="Sample Menu"
             mnemonic="M">
          <command
                commandId="org.eclipse.bpmn2.modeler.suggestion.commands.sampleCommand"
                id="org.eclipse.bpmn2.modeler.suggestion.menus.sampleCommand"
                mnemonic="S">
          </command>
       </menu>
    </menuContribution>
    <menuContribution
          locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
       <toolbar
             id="org.eclipse.bpmn2.modeler.suggestion.toolbars.sampleToolbar">
          <command
                commandId="org.eclipse.bpmn2.modeler.suggestion.commands.sampleCommand"
                icon="icons/sample.gif"
                id="org.eclipse.bpmn2.modeler.suggestion.toolbars.sampleCommand"
                tooltip="Say hello world">
          </command>
       </toolbar>
    </menuContribution>
 </extension>

</plugin>
